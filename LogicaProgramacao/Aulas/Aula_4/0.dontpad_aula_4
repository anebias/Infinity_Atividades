while True:# 
    nome = input("Digite seu nome de usuario: ")
    senha = input("Digite senha: ")
    
    if nome == "admin"  and senha == "1234" :
        print("\033[32mUsuario logado com sucesso\033[m")
        break
    else:
        print("\033[31mErro ao logar , tente novamente\033[m")

print("Finalizei")
